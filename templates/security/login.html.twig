{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}

	<div class="jumbotron mt-3">
		<h1 class="display-3" style="margin-left:33%">Connexion</h1>
		<p class="lead" style="margin-left:33%">Identifiez-vous et devenez un membre exclusif de notre club!!</p>
		<hr class="my-4">
		<form method="post">
			{% if error %}
				Votre connexion est invalide!!!
			{% endif %}

			{% if app.user %}
				<div class="mb-3">
					Vous Ãªtes connectez en tant que
					{{ app.user.username }},
					<a href="{{ path('app_logout')}}">Logout</a>
				</div>
			{% endif %}

			<h1 class="h3 mb-3 font-weight-normal">Connectez-vous</h1>
			<label for="inputEmail">Email</label>
			<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
			<label for="inputPassword">
				Mot de passe</label>
			<input type="password" name="password" id="inputPassword" class="form-control" required>

			<input
			type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

			
									        {# Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
									        See https://symfony.com/doc/current/security/remember_me.html
									#}
				<div class="checkbox mb-3"> 
					<label>
						<input type="checkbox" name="_remember_me"> Remember me
					</label>
				</div>
									   
			<div style="margin-left:40%">
				<a href="{{path('accueil')}}"<button class="btn btn-lg btn-primary ml-5 mt-3" type="submit">
					Validez
				</button>
                </a>
			</div>
		</form>
	</div>

{% endblock %}
